@{
  Layout = "../_Layout";
}

@section Head
{
  <link asp-append-version="true"
        href="~/pages/common/bulma.css"
        rel="stylesheet"
        type="text/css" />
  <link asp-append-version="true"
        href="~/pages/account/account.css"
        rel="stylesheet"
        type="text/css" />
}

<ul class="bg-bubbles">
  @for (var n = 0; n < 10; n++)
  {
    <li></li>
  }
</ul>
<section class="hero is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered is-flex-mobile">
        <div class="column"
             style="max-width: 410px;">
          @RenderBody()
        </div>
      </div>
    </div>
  </div>
</section>

<script src="~/pages/common/iconfont.js"></script>
<script src="~/pages/common/sweetalert.js"></script>

@await RenderSectionAsync("AlertScript", false)
